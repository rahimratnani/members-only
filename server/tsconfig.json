{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["es6", "dom", "ES2020"],
    "allowJs": true,
    "module": "commonjs",
    "rootDir": "src",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "typeRoots": ["./src/types"]
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*"]
}
