{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "warn",
            2
        ],
        "linebreak-style": [
            "warn",
            "unix"
        ],
        "quotes": [
            "warn",
            "single", 
            {"allowTemplateLiterals": true}
        ],
        "semi": [
            "warn",
            "always"
        ],
        "no-unused-expressions": [
            "error",
            {
              "allowShortCircuit": true,
              "allowTernary": true,
              "allowTaggedTemplates": true
            }
          ],
          "no-empty": "warn",
          "no-unused-vars": "warn"
    }
}
